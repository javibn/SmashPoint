<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmashPoint</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/SmashPoint.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="shortcut icon"
          href="/favicon.ico"
          type="image/x-icon">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
</head>
<body class="h-100">
    
    <header style="height: 10vh; margin-bottom: 4vh;">
        <nav class="navbar navbar-expand-xl navbar-light align-items-center p-0 container-fluid" style="height: 100%; z-index:2; border-bottom: 1px solid #FF5503;">
            <a class="navbar-brand ms-4 h-100" asp-area="" asp-action="Index" asp-controller="Escaparate">
                <img src="/img/logo.png" class="h-100" alt="Logo">
            </a>
            <button class="navbar-toggler h-100 m" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon h-100"></span>
            </button>
            <div class="collapse navbar-collapse fs-6 text-center bg-white" id="navbarNav">
                <ul class="navbar-nav mr-auto me-auto">
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Pedidos" asp-action="Index" class="nav-link text-decoration-none text-black">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Clientes" asp-action="Index" class="nav-link text-decoration-none text-black">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Usuarios" asp-action="Index" class="nav-link text-decoration-none text-black">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Productos" asp-action="Index" class="nav-link text-decoration-none text-black">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Proveedores" asp-action="Index" class="nav-link text-decoration-none text-black">Proveedores</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Descuentos" asp-action="Index" class="nav-link text-decoration-none text-black">Cupones</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Categorias" asp-action="Index" class="nav-link text-decoration-none text-black">Categorías</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Estados" asp-action="Index" class="nav-link text-decoration-none text-black">Estados</a>
                        </li>
                    }else @if (User.IsInRole("Usuario"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Escaparate" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Escaparate" ? "elegido" : "")">Escaparate</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Pedidos" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Pedidos" ? "elegido" : "")">Mis Pedidos</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="MisDatos" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Mis Datos" ? "elegido" : "")">Mis Datos</a>
                        </li>
                    }else @if (User.IsInRole("Gestor"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Escaparate" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Escaparate" ? "elegido" : "")">Escaparate</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Pedidos" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Pedidos" ? "elegido" : "")">Mis Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Productos" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Productos" ? "elegido" : "")">Mis Productos</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="MisDatosProveedor" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Mis Datos" ? "elegido" : "")">Mis Datos</a>
                        </li>
                    }else
                    {
                        <li class="nav-item">
                            <a asp-controller="Escaparate" asp-action="Index" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Escaparate" ? "elegido" : "")">Escaparate</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Escaparate" asp-action="Privacy" class="nav-link text-decoration-none text-black @(ViewData["Title"] == "Privacy" ? "elegido" : "")">Privacidad</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ml-auto align-items-center login  p-1 pe-2 ps-2">
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>

                </ul>
                @if (User.IsInRole("Usuario"))
                {
                    <ul class="navbar-nav ml-auto btn-carrito ps-2 pe-2 pb-2">
                        <li>
                            <!--<p style="margin-bottom:0px; height:25%;" class="row "></p>
                            <img src="~/img/carrito.png" class="row " style="height: 75%;width:auto;">-->
                            <div class="cart-button">
                                <a asp-controller="Carrito" asp-action="Index" class="btn" style="background-color: #FF5503;">
                                    <img src="/img/carrito.png" alt="Carrito" style="width: 30px; height: 30px;">
                                    <span class="badge badge-light" id="cart-item-count">
                                        @Html.GetSessionValue("Carrito")
                                    </span>
                                </a>
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>



    <main role="main" class="container" style="min-height: 80vh;">
        @RenderBody()
    </main>

    <footer class="bg-dark" style="height: 4vh; margin-top: 2vh;">
        <p class="text-center text-light m-0 p-0">&copy; Smash Point 2023 <a class="m-0 p-0 ms-2 text-light" asp-controller="Escaparate" asp-action="Privacy">Politica Privacidad</a></p>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
